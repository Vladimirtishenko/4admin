.site-user-form
    margin-top: 54px
    padding: 0 30px

.site-user-form__form-wrapper
    background-color: #ffffff
    box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.14)
    padding: 20px 15px 0
    margin-bottom: 5px

.site-user-form__title
    margin: -40px 0 0;
    background: #3079c1
    box-shadow: 0 12px 20px -10px rgb(150, 163, 175), 0 4px 20px 0 rgba(0,0,0,.12), 0 7px 8px -5px rgb(104, 143, 181)
    height: 83px
    border-radius: 3px
    padding: 15px
    display: flex
    flex-direction: column
    justify-content: space-between

.site-user-form__title-head
    font-family: "RobotoLight", "Helvetica", "Arial", sans-serif
    font-size: 18px
    font-weight: 400
    color: #fff
    letter-spacing: 0
    line-height: 24px

.site-user-form__title-description
    font-family: "RobotoLight", "Helvetica", "Arial", sans-serif
    font-size: 14px
    font-weight: 400
    color: rgba(255, 255, 255, 0.62)
    letter-spacing: 0
    line-height: 21px

.site-user-form-input-wrapper
    position: relative

.site-user-form__btn-wrapper
    padding: 26px 7px
    display: flex
    justify-content: flex-end

.site-user-form__btn-wrapper-button
    font-family: "RobotoLight", "Helvetica", "Arial", sans-serif
    font-weight: 400
    font-size: 12px
    color: #fff;
    background-color: #3079c1;
    width: 153px
    line-height: 41px;
    transition all 0.2s
    border-radius: 3px

.site-user-form__btn-wrapper-button:hover, .site-user-form__btn-wrapper-button:hover:focus
    background-color: #285b8e
    box-shadow: 0 14px 26px -12px rgba(48, 121, 193, 0.42), 0 4px 23px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(48, 121, 193, 0.2)

.site-user-form__card
    background-color: #fff;
    padding-top: 20px
    box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.14)
    margin-bottom: 5px

.site-user-form__card-wrapper
    position: relative
    height: 150px
    width: 130px
    overflow: hidden
    margin: -70px auto 0


.site-user-form__card-avatar
    display: block
    width: 130px
    height: 130px
    border-radius: 50%
    margin: 0 auto 0
    box-shadow: 0 10px 30px -12px rgba(0, 0, 0, 0.42), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2)

.site-user-form__card-icon
    position: absolute
    bottom: 13px
    right: -5px

.site-user-form__card-label
    width: 130px!important
    margin: 0 auto

#site-user-form__card-input
    display: none

.site-user-form__card-mail
    font-family: "RobotoLight", "Helvetica", "Arial", sans-serif
    font-weight: 400
    font-size: 14px
    color: #999;
    text-align: center
    letter-spacing: 0
    margin-top: 18px

.site-user-form__card-name
    text-align: center
    margin-top: 20px

.site-user-form__card-name-first, .site-user-form__card-name-second
    font-family: "RobotoLight", "Helvetica", "Arial", sans-serif
    font-weight: 300
    font-size: 18px
    color: #000;
    padding-left: 5px

.site-user-form__card-position, .site-user-form__card-role
    font-family: "RobotoLight", "Helvetica", "Arial", sans-serif
    font-weight: 300
    font-size: 14px
    color: #000;
    letter-spacing: 0
    text-align: center
    margin: 25px 0 50px




@media (max-width: 1200px)/*md, sm & xs*/
    .site-user-form__form-wrapper
        margin-top: 50px


@media (max-width: 992px)/*sm & xs*/
    .site-user-form
        margin-left: 0
        position: relative
        z-index: 5