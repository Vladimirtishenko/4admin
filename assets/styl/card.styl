.side-card-wrapper
	display relative
	padding 30px 0
	
.side-card-wrapper__item
	position relative
	background #ffffff
	border-radius 3px
	padding 20px
	box-shadow 0 2px 2px 0 rgba(0,0,0,0.14),0 1px 5px 0 rgba(0,0,0,0.12),0 3px 1px -2px rgba(0,0,0,0.2)
	margin-bottom 30px
	transition all 0.3s ease-in-out
	font-family CirceLight
	
.side-card-wrapper__description
	font-family CirceLight
	height 75px
	
.side-card-footer
	border-top 1px solid #ddd
	padding 20px 0 0 0
	margin-top 10px
	
.side-card-wrapper__title
	margin 0 0 20px 0
	font-family CirceLight
	font-size 25px